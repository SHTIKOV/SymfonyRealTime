{% extends 'base.html.twig' %}

{% block title %}Triangle | Edit "{{ room.title }}"{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>Edit room #{{ room.id }}:
                        <a class="btn btn-primary" href="/rooms">Back</a>
                    </h1>
                </div>
            </div>

            <hr/>

            {% if isEdited == true %}
            <div class="row">
                <div class="col-md-12">
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        Комната с id:<strong>{{ room.id }}</strong> была отредактирована.
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            </div>
            {% endif %}
        
            <div class="row">
                <div class="col-md-12">
                    <form action="{{ path('edit', {'id': room.id}) }}" type="post">
                        <div class="form-group">
                            <label for="title">Title</label>
                            <input type="text" value="{{ room.title }}" name="title" class="form-control" id="title" placeholder="Title">
                        </div>
                        <button type="submit" class="btn btn-success">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
